{
  "name": "photopea",
  "version": "1.0.0",
  "description": "photopea desktop app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:universal": "node build-universal.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron/universal": "^3.0.1",
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "wiki.qaq.photopea",
    "files": [
      "**/*"
    ],
    "mac": {
      "icon": "ress/icon.png",
      "identity": null,
      "target": [
        {
          "target": "dir",
          "arch": "x64"
        },
        {
          "target": "dir",
          "arch": "arm64"
        }
      ]
    },
    "win": {
      "icon": "ress/icon.png"
    },
    "linux": {
      "icon": "ress/icon.png"
    }
  }
}
